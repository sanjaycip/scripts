#!/bin/bash

# -a : archive -rlptgoD
# -A : preserve acl
# -X : extendend attrs ??
# -H : hard links

# -x : don't cross filesystem boundaries
# -R : relative
# -h : human readable

exec rsync -aAXH -xRh --progress ${@:3} "$1" "$2"

# -r : recursive
# -l : links
# -p : perms
# -t : times
# -g : group
# -D : --devices --specials

# -E : executability # -p iceriyor
# -A : acls,  -p iceriyor

# --------------
# --partial : keep partially transfared files
# --append : append data onto shorter files
# --exclude={"/dev/*","/proc/*","/sys/*","/tmp/*","/run/*","/mnt/*","/media/*","/lost+found"}
# -c: checksum
### -I: ignore times
